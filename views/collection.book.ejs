<%- include("partials/header.ejs") %>
<div class="relative min-h-screen flex">
  <%- include("partials/nav.ejs") %>

  <div class="flex-1 p-10 text-2x1 font-bold">
    <!-- Create a display area to show the new books -->
    <div class="space-y-6 py-7">
      <form action="/books/<%= book.id %>" method="POST" id="book-review">
        <input name="_method" type="hidden" value="PUT" />
        <div
          class="
            grid grid-cols-2 grid-rows-2
            h-full
            max-w-lg
            mx-auto
            rounded-lg
          "
        >
          <!-- <div class="p-4 mx-2 text-center">  -->
          <div class="col-span-2 row-span-1 align-middle text-center">
            <div id="<%= book.id %>" name="id" value="<%= book.id %>"></div>
            <img
              id="header-image"
              class="rounded-sm rounded-b-none"
              src="<%= book.thumbnail %>"
              alt="thumbnail"
            />

            <span> <%= book.title %></span>
            <span>By <%= book.authors %></span>
            <input type="radio" onchange='this.form.submit();' name="status"
            class="reading-status" id="to-read" value="to-read" <% if
            (book.status === "to-read") { %>checked <% }%>>
            <label for="to-read" class="reading-status__label"
              >ðŸ“• To Read</label
            >
            <input type="radio" onchange='this.form.submit();' name="status"
            class="reading-status" id="read" value="read" <% if (book.status ===
            "read") { %>checked <% }%>><label
              for="read"
              class="reading-status__label"
              >ðŸ“š Read</label
            >
            <input type="radio" onchange='this.form.submit();' name="status"
            class="reading-status" id="reading" value="reading" <% if
            (book.status === "reading") { %>checked <% }%>><label
              for="reading"
              class="reading-status__label"
              >ðŸ‘€ Reading</label
            >
          </div>

          <!-- description div -->
          <div class="col-span-1 row-span-1 text-sm ">
            <span class="8 line-clamp-10"><%- book.description %> </span>
          </div>

          <!-- book info div -->
          <div class="col-span-1 row-span-1">
            <span>Pages</span>
            <span> <%= book.pages %> </span>
              
            <!-- <input
              type="text"
              name="review"
              id="review-textarea"
              style="size: 2000; width: 80%; height: 150px"
              value="<%= book.review %>"
            /> -->
            <a href="/books/delete/<%= book.id %>">Delete this book from your collection</a>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
