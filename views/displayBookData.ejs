<%- include("partials/header.ejs") %>
<div class="relative min-h-screen flex">
  <%- include("partials/nav.ejs") %>

  <div class="flex-1 p-10 text-2x1 font-bold">
    <!-- Create a display area to show the new books -->

    <form action="/books" method="POST" id="book-search" class="search-results">
      <div id="<%= book.id %>" name="<%= book.id %>"></div>
      <img
            id="search-image"
            src="<%= (book.imageLinks) ? book.imageLinks.smallThumbnail : img %>"
          /><input
            type="hidden"
            name="thumbnail"
            value="<%= (book.imageLinks) ? book.imageLinks.thumbnail :  img %>"
          />
      <label
        ><input
          type="hidden"
          name="title"
          value="<%= book.title %>"
        />
        <%= book.title %></label
      >
      <label
        ><input
          type="hidden"
          name="authors"
          value="<%= book.authors %>"
        />
        <%= book.authors %></label
      >
      <label
        ><%= book.pageCount %><input
          type="hidden"
          name="pages"
          value="<%= (!book.pageCount) ? '?' : book.pageCount %>"
      /></label>
      <input type="radio" onchange='this.form.submit();' name="status"
      class="reading-status" id="to-read" value="to-read" <% if (book.status ===
      "to-read") { %>checked <% }%>>
      <label for="to-read" class="reading-status__label">ğŸ“• To Read</label>
      <input type="radio" onchange='this.form.submit();' name="status"
      class="reading-status" id="read" value="read" <% if (book.status ===
      "read") { %>checked <% }%>><label for="read" class="reading-status__label"
        >ğŸ“š Read</label
      >
      <input type="radio" onchange='this.form.submit();' name="status"
      class="reading-status" id="reading" value="reading" <% if (book.status ===
      "reading") { %>checked <% }%>><label
        for="reading"
        class="reading-status__label"
        >ğŸ‘€ Reading</label
      ><br />
      <label class="line-clamp-10" 
        ><input
          type="hidden"
          name="description"
          
          value="<%= book.description %>"
        />
        <%- book.description %></label
      >
    </form>
  </div>
</div>
